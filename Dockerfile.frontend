FROM node:20-alpine

WORKDIR /app

# Copy package files (context is ./frontend, so package.json is at root of context)
COPY package*.json ./

# Install dependencies
RUN apk add --no-cache curl
RUN npm install

# Copy source code (context is ./frontend, so copy everything in context)
COPY . .

# Expose Next.js port
EXPOSE 3000

# Run in dev mode
CMD ["npm", "run", "dev"]
